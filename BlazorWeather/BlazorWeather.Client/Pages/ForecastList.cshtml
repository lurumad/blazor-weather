@using BlazorWeather.Shared

@foreach (var weatherInfo in Weather)
{
    <div class="forecast-table">
		<div class="container">
			<div class="forecast-container">
				<div class="today forecast">
					<div class="forecast-header">
						<div class="day">@weatherInfo.DayName</div>
						<div class="date">@weatherInfo.DayNumber @weatherInfo.MonthName</div>
					</div> <!-- .forecast-header -->
					<div class="forecast-content">
						<div class="location">@weatherInfo.Location</div>
						<div class="degree">
							<div class="num">@weatherInfo.Degree<sup>o</sup> C</div>
							<div class="forecast-icon">
								<img src = "images/icons/icon-1.svg" alt="" width=90>
							</div>	
						</div>
						<span><img src = "images/icon-umberella.png" alt="">20%</span>
						<span><img src = "images/icon-wind.png" alt="">@(weatherInfo.WindSpeed)km/h</span>
						<span><img src = "images/icon-compass.png" alt="">@(weatherInfo.Compass)</span>
					</div>
				</div>

                <ForecastItem DailyWeather="@weatherInfo.DailyWeather" />

			</div>
		</div>
	</div>
    <br />
}

@functions {
    public WeatherDTO [] Weather { get; set; }
}
